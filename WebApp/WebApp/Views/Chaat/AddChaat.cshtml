@model WebApp.ChaatsModel.Chaat

@{
    ViewData["Title"] = "AddChaat";
}

<style>

    .blax {
        background-size: cover;
        background-repeat: no-repeat;
        min-width: 100%;
        margin-top: -40px;
        position:absolute;
        left: -50%;
        right: -50%;
        margin: auto;
        top: 10%;
    }



</style>


<div class="container">
    
    <img src="~/image/chaats.jpg" class="blax"  />



    <div class="row">
     
        <div class="col-md-4">
            <h1>Enter a new chaat</h1>
            <form asp-action="AddChaat" class="was-validated">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cid" class="control-label"></label>
                    <input asp-for="Cid" class="form-control" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                    <span asp-validation-for="Cid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cname" class="control-label"></label>
                    <input asp-for="Cname" class="form-control" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                    <span asp-validation-for="Cname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cprice" class="control-label"></label>
                    <input asp-for="Cprice" class="form-control" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                    <span asp-validation-for="Cprice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add item" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="ChaatDetails"  class="text-dark">Back to Chaat Menu</a>
            </div>
        </div>
    </div>

    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
