@model WebApp.ChaatsModel.Chaat

@{
    ViewData["Title"] = "Edit";
}
<style>

    .blax {
        background-size: cover;
        background-repeat: no-repeat;
        min-width: 100%;
        margin-top: -40px;
        position: absolute;
        left: -50%;
        right: -50%;
        margin: auto;
        top: 10%;
    }
</style>



<div class="container">

    <img src="~/image/chaats.jpg" class="blax" />
    <div class="row">
        <div class="col-md-4">
            <h1>Update Chaat</h1>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Cid" />

                <div class="form-group">
                    <label asp-for="Cname" class="control-label"></label>
                    <input asp-for="Cname" class="form-control" />
                    <span asp-validation-for="Cname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cprice" class="control-label"></label>
                    <input asp-for="Cprice" class="form-control" />
                    <span asp-validation-for="Cprice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="ChaatDetails" class="text-dark">Back to Chaat Menu</a>
            </div>
        </div>
    </div>

    
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
