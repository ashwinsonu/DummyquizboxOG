@{
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @{
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("Username");
    }
    @if (ViewBag.Data != null)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-controller="Order" asp-action="OrderDetails" title="Manage">Hello @ViewBag.Data </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Login" asp-action="Logout" asp-route-returnUrl="@Url.Action("Login", "Login", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" id="register" asp-controller="Login" asp-action="Create">Register</a>
            @*@Html.ActionLink("Register","Create","Users")*@
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" id="login" asp-controller="Login" asp-action="Login">Login</a>
        </li>
    }
</ul>
