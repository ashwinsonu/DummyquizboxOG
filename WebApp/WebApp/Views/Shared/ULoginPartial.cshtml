@{  
    
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @{
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("Username");
    }
    @if (ViewBag.Data != null)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-controller="User" asp-action="User" title="Manage">Hello @ViewBag.Data </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="ULogin" asp-action="ULogout" asp-route-returnUrl="@Url.Action("ULogin", "ULogin", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">ULogout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" id="register" asp-controller="ULogin" asp-action="UCreate">Register User</a>
            @*@Html.ActionLink("Register","Create","Users")*@
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" id="login" asp-controller="ULogin" asp-action="ULogin">Login User</a>
        </li>
    }
</ul>
